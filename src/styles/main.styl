main
  padding 63px 0 37px 0
ul.slideshow
  margin-bottom 46px
  img
    width 345px
    height 185px
  li
    display inline
.content
  center(600px)
h3
  margin-bottom 20px
h4
  margin-bottom 30px
p
  margin-bottom 12px
input[type="text"]
  col(1/2)
  padding 9px 13px 9px 23px
  appearance none
  box-shadow none
  border-radius none
  outline none
  font-family type-arial
  border 1px solid orange
  border-radius 2px
  text-align left
  margin-bottom 20px
  &.email
    margin-right 0
input[type="checkbox"]
  margin-bottom 45px
  margin-right 13px
  border 1px solid orange
input[type="submit"]
  border-radius 100px
  border none
  center(250px)
  min-width 250px
  outline none
  padding 14px 0
  margin-bottom 42px
  cursor pointer
ul.share-icons
  margin-bottom 36px
  li
    margin-right 10px
    display inline-block
    line-height 29px
  li:not(.share)
    border 1px solid orange
    border-radius 100px
    width 30px
    height 30px
    margin-right 5px
