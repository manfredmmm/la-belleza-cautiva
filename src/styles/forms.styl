input[type="text"]
  col(1/2)
  appearance none
  box-shadow none
  border-radius none
  outline none
  font-family type-arial
  border 1px solid orange
  border-radius 2px
  text-align left
  margin-bottom 20px
  &.name
    padding 9px 13px 9px 40px
    background-image url("/images/user-email-sprite.png")
    background-repeat no-repeat
    background-position 0 -3px
  &.email
    padding 9px 13px 9px 49px
    margin-right 0
    background-image url("/images/user-email-sprite.png")
    background-repeat no-repeat
    background-position 2px -44px
input[type="checkbox"]
  margin-bottom 45px
  margin-right 13px
  border 1px solid orange
input[type="submit"]
  center(250px)
  border-radius 100px
  border none
  min-width 250px
  outline none
  padding 14px 0
  margin-bottom 42px
  cursor pointer
  transition-duration .4s
  &:hover
    background-color darken(orange, 10%)
  &:active
    box-shadow inset 0 0 10px darken(orange, 40%)
