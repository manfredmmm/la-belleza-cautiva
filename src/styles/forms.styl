form
  cf()
input[type="text"]
  col(1/2)
  appearance none
  box-shadow none
  border-radius none
  outline none
  font-family type-arial
  border 1px solid orange
  border-radius 2px
  text-align left
  margin-bottom rem(20)
  &.name
    padding rem(9px 13px 9px 49px)
    background-image url("/images/icons-sprite.png")
    background-repeat no-repeat
    background-position 0 -3px
  &.email
    padding rem(9px 13px 9px 49px)
    background-image url("/images/icons-sprite.png")
    background-repeat no-repeat
    background-position 4px -44px
input[type="checkbox"]
  display none
input[type="submit"]
  appearance none
  border none
  outline none
  center(250px)
  min-width 250px
  padding rem(14 0)
  margin-bottom rem(42)
  border-radius 100px
  cursor pointer
  &:hover,
  &:active
    transition-duration .4s
  &:hover
    background-color darken(orange, 10%)
  &:active
    box-shadow inset 0 0 10px darken(orange, 40%)
label.grey
  display block
  margin-bottom rem(45)
input[type="checkbox"] + label .checkbox
  position relative
  top 4px
  display inline-block
  width 18px
  height 18px
  background-color white
  border 1px solid orange
  border-radius 2px
  margin-right rem(13)
input[type="checkbox"]:checked + label .checkbox
  svg.tick
    opacity 1
svg.tick
  position absolute
  top 0
  left 0
  opacity 0
  transition-duration .3s
@media mobile
  input[type="text"]
    col(1)
    center(95%)
    text-align left
    &.name
      background-position 4px -5px
    &.email
      background-position 4px -45px
@media tablet-desktop
  input[type="text"]
    &.email
      margin-right 0
